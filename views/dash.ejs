<%- include('partials/header-user') %>
<div class="main">
  <nav class="navbar navbar-expand px-4 py-3">
      <form action="#" class="d-none d-sm-inline-block">

      </form>
      <div class="navbar-collapse collapse">
          <ul class="navbar-nav ms-auto">
              <li class="nav-item dropdown">
                  <a href="#" data-bs-toggle="dropdown" class="nav-icon pe-md-0">
                      <img src="/images/user.png" class="avatar img-fluid" alt="">
                  </a>
                  <div class="dropdown-menu dropdown-menu-end rounded">

                  </div>
              </li>
          </ul>
      </div>
  </nav>
 

  <main class="content px-3 py-4">
      <div class="container-fluid">
          <div class="mb-3">
              <h3 class="fw-bold fs-4 mb-3">MINEHUB DASHBOARD</h3>

              <hr></hr>
        
              <div class="row">
                  <div class="col-12 col-md-4 ">
                      <div class="card border-0 custom-card">
                          <div class="card-body py-4">
                              <h5 class="mb-2 fw-bold">
                                
                                <div class="icon-label"> <i class="fas fa-coins text-warning"></i> Current Balance</div>
                              </h5>
                              <p class="mb-2 fw-bold">
                                <span><img src="/images/coin-1.svg" width="24" height="27" alt="bitcoin logo"></span>
                                <%= updatedBalance %>
                              </p>
                              
                              <div class="mb-0">
                                  <span class="badge text-success me-2">
                                      +2.5% Dialy 
                                  </span> <br>
                                  <span class=" fw-bold">
                                    <label class="text-muted"><i class="fas fa-exclamation-circle text-danger"></i> <!-- Alert icon -->
                                      The AI mines every 10min</label>
                                    <a href="/withdraw" class="btn btn-success">Withdraw</a>
                                  </span>
                              </div>
                          </div>
                      </div>
                  </div>

                  <div class="col-12 col-md-4 ">
                      <div class="card  border-0 custom-card">
                          <div class="card-body py-4">
                              <h5 class="mb-2 fw-bold">
                                 
                    <div class="icon-label"> <span class="text-warning"> <i class="fas fa-chart-line text-success"></i> 1 BTC </span> - Bitcoin Price</div>
                              </h5>
                              <p class="mb-2 fw-bold">
                                <div class="card-title-wrapper">
                                  <img src="/images/coin-1.svg" width="24" height="24" alt="bitcoin logo">
                                  <a href="#" class="card-title"></a>
                                  <span class="fw-bold">
                                    BITCOIN <span class="span">BTC/USD</span>
                                  </span>
                              </div>
                             
                              </p>
                              <div class="mb-0">
                                  <span class="badge text-success me-2">
                                    <% if (cryptoData && cryptoData.USD) { %>
                                      <data class="card-value" value="<%= cryptoData.USD %>">USD <%= cryptoData.USD %></data>
                                      <% } else { %>
                                      <p>No USD value available for Bitcoin</p>
                                      <% } %>
                                  </span>
                                  
                              </div>
                          </div>
                      </div>
                  </div>

                  <div class="col-12 col-md-4 ">
                      <div class="card border-0 custom-card">
                          <div class="card-body py-4">
                              <h5 class="mb-2 fw-bold">
                                
                                <div class="icon-label"><i class="fas fa-cogs text-primary"></i> Active <% user.hashRates.forEach(rate => { %>
                                    <strong>Hash Rate:
                                      
                                    </strong> <span class="text-success"><%= rate.hashRate %>
                                      <% }); %>Hs</span> 
                                  
                                  </div>
                              </h5>
                              <p class="mb-2 fw-bold text-center">
                                <a href="/buy-contracts" class="btn btn-primary">Buy Hashrate</a>
                              </p>
                             
                          </div>
                      </div>
                  </div>
              </div>


              <hr>
              <%- include('transaction') %>


          </div>
      </div>
  </main>


  
  <footer class="footer">
    <div class="container-fluid">
        <div class="row text-body-secondary">
            <div class="col-6 text-start ">
                <a class="text-body-secondary" href=" #">
                    <strong>@<%= user.name %></strong>
                </a>
            </div>
            <div class="col-6 text-end text-body-secondary d-none d-md-block">
                <ul class="list-inline mb-0">
                    <li class="list-inline-item">
                        <a class="text-body-secondary" href="#">Contact</a>
                    </li>
                    <li class="list-inline-item">
                        <a class="text-body-secondary" href="#">About Us</a>
                    </li>
                    <li class="list-inline-item">
                        <a class="text-body-secondary" href="#">Terms & Conditions</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
  </footer>
</div>

</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
