i.notification {
    position: relative;
}

i.notification::after {
    content: '';
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #FF8872;
    position: absolute;
    top: 0px;
    right: 23px;
}
    
</style>



<div class="container transactions-container">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h2>Recent Transactions</h2>
        <a href="/transactions" style="text-align: end;">View all</a>
    </div>

 
    <div class="row mt-4">
        <div class="col-md-8">
            <div>
                <table class="table table-borderless custom-table">
                    <thead>
                        <tr>
                            <th class="text-uppercase font-10 weight-600 grey-color-2">Transactions</th>
                            <th href="/transactions" class="text-uppercase font-10 weight-600 purple-color-2 text-end">Amount</th>
                        </tr>
                    </thead>
                   
                    <tbody>
                        <% recentTransactions.forEach((transaction, index) => { %>
                            <tr>
                                <% if (transaction.description === 'Withdraw') { %>
                                    <td>
                                        <div class="d-flex flex-row">
                                            <div class="d-flex flex-row justify-content-center align-items-center text-danger square round-corner-small light-orange-bg-color font-14">
                                                <i class="fas fa-long-arrow-alt-up"></i>
                                            </div>
                                            <div class="d-flex flex-column ps-2">
                                                <span class="font-14 weight-700 text-danger">Withdraw <%= transaction.currency %></span>
                                                <span class="font-10 weight-400 text-danger"><%= transaction.timestamp.toISOString().split('T')[0] %></span>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column align-items-end">
                                            <span class="font-16 weight-700 text-danger ">-<%= transaction.amount %> BTC</span>
                                        </div>
                                    </td>
                                <% } else { %>
                                    <td>
                                        <div class="d-flex flex-row ">
                                            <div class="d-flex flex-row justify-content-center align-items-center square round-corner-small light-purple-bg-color purple-color-2 font-14 ">
                                                <i class="fas fa-long-arrow-alt-down " style="color: green;"></i>

                                            </div>
                                            <div class="d-flex flex-column ps-2 ">
                                                <span class="font-14 weight-700 text-success ">Deposit <%= transaction.currency %></span>
                                                <span class="font-10 weight-400 text-success "><%= transaction.timestamp.toISOString().split('T')[0] %></span>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column align-items-end ">
                                            <span class="font-16 weight-700 purple-color-2 text-success">+$<%= transaction.amount %></span>
                                        </div>
                                    </td>
                                <% } %>
                            </tr>
                        <% }) %>
                    </tbody>
                    
                    
                    

                </table>
            </div>
        </div>
    </div>
    
    
</div>
